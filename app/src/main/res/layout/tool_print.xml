<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Принт:"
        android:layout_marginBottom="5dp"
        style="@style/tool_name"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_man"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_man"/>

            <ImageView
                android:id="@+id/iv_mosaic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_mosaic"/>

            <ImageView
                android:id="@+id/iv_fingerprint"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_fingerprint"/>

            <ImageView
                android:id="@+id/iv_forbidden"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_forbidden"/>

            <ImageView
                android:id="@+id/iv_globe"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_globe"/>

            <ImageView
                android:id="@+id/iv_happy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_happy"/>

            <ImageView
                android:id="@+id/iv_key"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_key"/>

            <ImageView
                android:id="@+id/iv_hand"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_hand"/>

            <ImageView
                android:id="@+id/iv_sad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_sad"/>

            <ImageView
                android:id="@+id/iv_brush"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/print_brush"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Размер:"
        style="@style/tool_name"/>

    <SeekBar
        android:id="@+id/sb_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:max="100"/>

    <include layout="@layout/color_picker"/>

</LinearLayout>